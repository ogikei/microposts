<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <ul class="follow_follower list-group">
        <li class="followings_link">
          <span><%= link_to 'Followings', followings_user_path(@user) %></span>
          <span><%= @followings.count %></span>
        </li>
        <li class="followers_link">
          <span><%= link_to 'Followers', followers_user_path(@user) %></span>
          <span><%= @followers.count %></span>
        </li>
      </ul>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= paginate @microposts %>
      </ol>
    <% end %>
  </div>
</div>

<div class="my_profile">
  <div class="">
    <table class="table table-hover">
      <caption>My profile</caption>
      <thead>
      </thead>
      <tbody>
        <tr>
          <td>出身地</td>
          <td><%= @user.region %></td>
        </tr>
        <tr>
          <td>自己紹介</td>
          <td><%= @user.profile %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

